{
  "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "jsx": "react-jsx",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true, // Skip type checking of declaration files
      "forceConsistentCasingInFileNames": true,
      "typeRoots": [
          "./node_modules/@types",
          "./src/@types"  // Include your custom types directory
      ]
  },
  "include": [
      "src/**/*"
  ]
}
